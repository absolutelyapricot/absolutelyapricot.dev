{
  "configurations": [
    {
      // Works for most use cases
      "name": "Build & Run Program",
      "program": "npm: start",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "npm: prestart",
      "type": "node"
    },
    {
      // Best used with tsc in the watch mode
      // npx tsc -w
      "name": "Run Program",
      "program": "index.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "cwd": "${workspaceFolder}/dist",
      "type": "node"
    },
    {
      "name": "Clean Files",
      "program": "npm: clean",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "type": "node"
    }
  ]
}